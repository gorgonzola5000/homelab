{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "bumpVersion": "patch",
  "pinDigests": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/).+\\.container$"],
      "matchStrings": [
        "/Image=(?<depName>[^\\s:@\"]+)(?::(?<currentValue>[-a-zA-Z0-9.]+))?(?:@(?<currentDigest>sha256:[a-zA-Z0-9]+))?/gm"
      ],
      "autoReplaceStringTemplate": "Image={{{depName}}}:{{{newValue}}}@{{{newDigest}}}",
      "datasourceTemplate": "docker"
    }
  ]
}
